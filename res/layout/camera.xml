<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@drawable/top"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/Button_BarCode"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/null2"
            android:src="@drawable/barcode" />

        <ImageView
            android:id="@+id/Button_Photo"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_border"
            android:clickable="true"
            android:contentDescription="@string/null2"
            android:src="@drawable/snap" />

        <ImageView
            android:id="@+id/Button_QRCode"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/null2"
            android:src="@drawable/qrcode2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ContainertextureView1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal" >

        <org.imperial.activemilespro.gui.AutoFitTextureView
            android:id="@+id/textureView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="end|center_horizontal" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottonBar"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@drawable/bottom" >

        <TextView
            android:id="@+id/Button_Shot"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/camera2"
            android:scaleType="fitCenter"
            android:clickable="true" />

        <ImageView
            android:id="@+id/PhotoPreview"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/border"
            android:clickable="true"
            android:contentDescription="@string/null2"
            android:onClick="openAlbum"
            android:src="@drawable/album" />

        <TextView
            android:id="@+id/Button_SwithCamera"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/switch1"
            android:clickable="true"
            android:onClick="switchCamera" />
    </RelativeLayout>

</LinearLayout>